        // Buttons
        echo '<div class="btn-toolbar">';
            LBApplicationUI::submitButton('New Default Note', array(
                'url'=> $this->createUrl('createDefaultNote'),
                'buttonType'=>'ajaxSubmit',
                'ajaxOptions'=>array(
                    'success'=>'js:function(){loadDetailDefaultNote();}'
                ),
                'htmlOptions'=>array(
                    'style'=>'margin-left: auto; margin-right: auto',
                    'id'=>'ajax-btn-new-default-note',
                    'live'=>false,
                ),
            ));
        echo '</div>';
    }
    else
    {
        $this->renderPartial('_form_default_detail_note', array(
            
                ));
    }
?>
</div>
